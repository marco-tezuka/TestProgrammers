@model TesteProgrammers.ViewModels.FazerPedidoViewModel

@{
    ViewData["Title"] = "FazerPedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center mt-3">
    <div class="col-md-6">
        <form asp-action="FazerPedido" id="form-pedido">
            <div class="card">
                <div class="card-header">
                    <h2>Fazer Pedido</h2>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Nome:</label>
                        <select asp-for="FuncionarioId" asp-items="@(new SelectList(Model.Funcionarios, "Id", "Nome"))" class="form-control">
                            <option value=""> Selecione </option>
                        </select>
                        <span asp-validation-for="FuncionarioId"></span>
                    </div>

                    <div class="form-group">
                        <label>Tamanho:</label>
                        <select asp-for="TamanhoId" asp-items="@(new SelectList(Model.Tamanhos, "Id", "Nome"))" class="form-control">
                            <option value=""> Selecione </option>
                        </select>
                        <span asp-validation-for="TamanhoId"></span>
                    </div>

                    <div class="form-group">
                        <label>Composição:</label>
                        <select asp-for="ComposicaoId" asp-items="@(new SelectList(Model.Composicoes, "Id", "Nome"))" class="form-control">
                            <option value=""> Selecione </option>
                        </select>
                        <span asp-validation-for="ComposicaoId"></span>
                    </div>

                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-light">Back to List</a>
                        <input type="submit" value="Fazer Pedido" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
